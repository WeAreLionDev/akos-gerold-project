---
import classNames from 'classnames'
import Logo from './Logo.astro'
import Navigation from './Navigation.astro'
import { MenuButton } from 'src/components/react'
import type { HTMLAttributes } from 'astro/types'

type Props = HTMLAttributes<'header'>

const { class: className } = Astro.props
---

<header class={classNames('w-full', className)}>
  <div class="container mx-auto flex items-center justify-between border-b px-5 py-8 md:px-10 md:py-0 lg:px-12">
    <Logo />
    <MenuButton client:only />
    <ul class="hidden list-none flex-row md:flex">
      <Navigation />
    </ul>
  </div>
</header>
