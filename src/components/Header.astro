---
import classNames from 'classnames'
import Logo from './Logo.astro'
import Navigation from './Navigation.astro'
import { MenuButton } from 'src/components/react'
import type { HTMLAttributes } from 'astro/types'
import { Rating } from 'src/components/react/Rating'

type Props = HTMLAttributes<'header'>

const { class: className } = Astro.props
---

<header class={classNames('w-full bg-slate-900 text-zinc-100', className)}>
  <div class="container mx-auto flex items-center py-5">
    <Logo class="mr-10 max-w-[138px]" />
    <Rating rating={4.7} maxRating={5} subtitle="Based on 1379 reviewers" />
    <MenuButton client:only />
    <ul class="ml-auto list-none flex-row md:flex">
      <Navigation />
    </ul>
  </div>
</header>
