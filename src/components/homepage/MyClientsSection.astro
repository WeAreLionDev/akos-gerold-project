---
import { SectionContainer } from 'src/components/react'
---

<SectionContainer className="bg-stone-100 py-5 text-stone-950 md:py-10 lg:py-20" containerClass="flex flex-col">
  <h2 class="mb-10 text-center font-poppins text-5xl font-bold md:mb-20">My clients</h2>
  <div class="flex flex-col">
    <div class="client-section">
      {
        Array.from(Array(8)).map(() => (
          <>
            <div class="bg-black" />
            <div class="bg-red-500" />
            <div class="bg-blue-500" />
          </>
        ))
      }
    </div>
  </div>
</SectionContainer>
