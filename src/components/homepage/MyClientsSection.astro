---
import { ClientCarousel, SectionContainer } from 'src/components/react'
import type { ClientSectionType } from 'src/types'

type Props = ClientSectionType

const { clients, title } = Astro.props
---

<SectionContainer
  id="clients"
  className="overflow-hidden bg-stone-100 py-20 text-stone-950 xl:py-40"
  containerClass="flex flex-col items-center"
>
  <h2 class="mb-20 text-center font-poppins text-5xl font-bold xl:mb-40">{title}</h2>
  <ClientCarousel client:only clients={clients} />
</SectionContainer>
